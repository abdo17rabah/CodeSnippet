<h1>Code Snippets</h1>
<div class="row">
    {{#each codeSnippets}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">

                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{truncate body 150}}</p>
                <p>{{language}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/codesnippets/user/{{user._id}}">{{user.displayName}}</a>
                </div>
                <div class="card-action center-align">
                    <a href="/codesnippets/{{_id}}" class="btn grey">See More</a>
                </div>
            </div>
            </div>  
        </div>
        {{else }}
        <p> No Code Snippets to display </p>
        {{/each }}
</div>
