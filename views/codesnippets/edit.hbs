<h3> Edit Your Code Snippet</h3>
<div class="row">
    <form action="/codesnippets/{{codeSnippets._id}}" method="POST" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
        <div class="input-field">
            <input type="text" id="title" name="title" value="{{codeSnippets.title}}">
            <label for="title">Title</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field">
            <select name="status" id="status">
                {{#select codeSnippets.status}}
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
                {{/select}}
            </select>
            <label for="status">Status</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field">
            <h5>Enter your code </h5>
            <textarea name="body" id="body">{{codeSnippets.body}}</textarea>
        </div>
    </div>

    <div class="row">
        <div class="input-field">
            <input type="text" id="language" name="language" value="{{codeSnippets.language}}">
            <label for="language">Language</label>
        </div>
    </div>

    <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
    </form>
</div>