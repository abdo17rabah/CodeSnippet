<div class="row">
    <div class="col s12 m8">
        <h3>{{codeSnippets.title}}
            <small>{{{editIcon codeSnippets.user user codeSnippets._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{codeSnippets.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{codeSnippets.user.displayName}}</span>
                <img src="{{codeSnippets.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/codesnippets/user/{{codeSnippets.user._id}}">More From {{codeSnippets.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>